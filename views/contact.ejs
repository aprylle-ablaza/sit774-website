<%- include('header'); -%>
<main>
    <div class="container-fluid row align-items-center my-5" id="contact-form">
      <div class="col-lg-3"></div>
      <div class="col-lg">
        <form class="text-center py-4" action="">
                  <h2> Contact Us</h2>
                  <div class="container">
                    <!-- name -->
                    <div class="row m-2">
                      <div class="col-lg-2">
                        <label for="name">Name:</label>
                      </div>
                      <div class="col-lg">
                        <input type="text" class="form-control" id="name" name="name">
                      </div>
                      <div class="col-lg-2">
                      </div>
                    </div>
                    <!-- name validation -->
                    <div class="row m-2">
                      <div class="col-lg-2"></div>
                      <div class="col-lg text-start" id="nameValidationElement">
                      </div>
                      <div class="col-lg-2"></div>
                    </div>
                    <!-- email  -->
                    <div class="row m-2">
                      <div class="col-lg-2">
                        <label for="email">Email:</label>
                      </div>
                      <div class="col-lg">
                        <input type="text" class="form-control" id="email" name="email">
                      </div>
                      <div class="col-md-2">
                      </div>
                    </div>
                    <!-- email validation -->
                    <div class="row m-2">
                      <div class="col-lg-2"></div>
                      <div class="col-lg text-start" id="emailValidationElement">
                      </div>
                      <div class="col-lg-2"></div>
                    </div>
                    <!-- subject -->
                    <div class="row m-2">
                      <div class="col-lg-2">
                        <label for="subject">Subject:</label>
                      </div>
                      <div class="col-lg">
                        <input type="text" class="form-control" id="subject" name="subject">
                      </div>
                      <div class="col-lg-2"></div>
                    </div>
                    <!-- subject validation -->
                    <div class="row m-2">
                      <div class="col-lg-2"></div>
                      <div class="col-lg text-start" id="subjectValidationElement">
                      </div>
                      <div class="col-lg-2"></div>
                    </div>
                    <!-- message -->
                    <div class="row m-2">
                      <div class="col-lg-2">
                        <label for="message">Message:</label>
                      </div>
                      <div class="col-lg">
                        <textarea name="message" id="message" rows="10" class="form-control"></textarea>
                      </div>
                      <div class="col-lg-2"></div>
                    </div>
                    <!-- message validation -->
                    <div class="row m-2">
                      <div class="col-lg-2"></div>
                      <div class="col-lg text-start" id="messageValidationElement">
                      </div>
                      <div class="col-lg-2"></div>
                    </div>
                  </div>
                  <!-- buttons -->
                  <div class="row m-2 align-items-start">
                    <div class="col-md-2"></div>
                    <div class="col-md m-2">
                      <button id="btnSubmit" style="width: 100%;" class="btn btn-primary">Send Inquiry</button>
                    </div>
                    <div class="col-md m-2">
                      <button id="btnReset" style="width: 100%;" class="btn btn-danger">Reset</button>
                    </div>
                    <div class="col-md-2"></div>
                  </div>
        </form>
      </div>
      <div class="col-sm-3"></div>
    </div>
  </main>
  <script src="/resources/scripts/contact.js"></script>
<%- include('footer'); -%>