<%- include('header'); -%>
<main>
    <section class="container-fluid p-0">
      <div class="hero-image d-flex align-items-center justify-content-center text-center text-white">
          <div class="overlay"></div>
          <div class="hero-text">
              <h1 class="display-4">All Products</h1>
              <p>Indulge in the art of self-careâ€”because you deserve a moment just for you</p>
          </div>
      </div>
    </section>
      <div class="container-fluid text-center">
          <div class="row m-2 gx-2 gy-5" id="products-container">
            <p><%= products.length %> Products Available</p>
            <% products.forEach(product => { %>
                <div class="col-sm-3 card p-0">
                    <div class="card-body p-0">
                        <a href="/products/<%= product.id %>">
                            <img src="<%= product.image %>" alt="<%= product.name %>" class="card-img-top img-fluid">
                        </a>
                        <h5 class="card-title">
                            <%= product.name %>
                        </h5>
                        <p class="card-text">
                            $<%= product.price %>
                        </p>
                        <button class="btn btn-success m-1">
                            Add to cart
                        </button>
                        <a href="/products/<%= product.id %>" class="btn btn-primary m-1">
                            Learn More
                        </a>
                    </div>
                </div>
            <% }); %>
          </div>
      </div>
  </main>
<%- include('footer'); -%>